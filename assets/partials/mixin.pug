- 
    const descriptionTabs = [
        {
            left: 'Client',
            right: 'Client Name'
        },
        {
            left: 'Services',
            right: 'Art Direction'
        },
        {
            left: 'Year',
            right: '2020'
        },
        {
            left: 'link',
            right: 'www.google.com'
        }
    ]


mixin forImg(a, b)
    div(class='flex flex-wrap p-3')
        - for(let i = 1; i < b; i ++)
            div(class='md:w-1/3 w-full p-3')
                img(src=`./assets/img/${a}${i}.jpg`)


mixin navbar(a)
    div(
        id='navbar'
        class='flex justify-between items-center w-full h-20'
        class=a)
        a(
            href='https://tom-deman.github.io/portfolio/'
            target="_blank")
            h1(
                class='ml-8 text-xl font-semibold'
                class='title'
            ) TD
        button(
            class='mr-8'
            class='burger'
        )
            include ./burger.pug


mixin scrollImg(a, b)
    div(
        id='scroll'
        class='scroll-part'
    )
        div(class='flex w-6/6 scroll-div')
            div(
                class='md:w-2/3 w-full md:pl-10 flex'
                class='fixed-gallery'
            )
                div(class="w-5/6 m-auto")
                    - for( let i = 1; i < a; i ++ )
                        img(
                            src=`./assets/img/${b}${i}.jpg`
                            class='my-8 p-4'
                        )
            div(class='md:block hidden w-1/3 mt-12 pr-10' class='stay-here')
                h3(class='font-medium text-2xl') Sidebar Stack
                p(class='font-light text-sm text-gray-600 mt-6 leading-relaxed').
                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Veniam accusamus pariatur sint suscipit soluta voluptatibus repellendus beatae ad rem, doloremque cum dolor minima delectus. Minima a illum eos nesciunt commodi sequi explicabo? Perferendis totam iste recusandae voluptatum similique magni rem tenetur cupiditate ratione, quibusdam libero quod atque molestiae vero at.
                hr(class='my-10')
                each descriptionTab in descriptionTabs
                    .flex.m-1
                        div(class='w-1/3')
                            p.font-medium.text-sm= descriptionTab.left
                        div(class='w-1/3')
                            p.text-gray-600.text-sm= descriptionTab.right
                hr(class='my-10')
                .flex
                    include ./global/share
