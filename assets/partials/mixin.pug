mixin forImg(a, b)
    div(class='flex flex-wrap p-3')
        - for(let i = 1; i < b; i ++)
            div(class='w-1/3 p-3')
                img(src=`./assets/img/${a}${i}.jpg`)


mixin navbar(a)
    div(id='navbar' class='flex justify-between items-center w-full h-20' class=a)
        a(
            href='https://tom-deman.github.io/portfolio-final/'
            target="_blank") 
            h1(
                class='ml-8 text-xl font-semibold' 
                class='title'
            ) TD
        button(class='mr-8' class='burger')
            include ./burger.pug
