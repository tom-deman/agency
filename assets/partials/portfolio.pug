- 
    const portfolioLinks = [
        'show all', 
        'landscapes', 
        'products', 
        'white', 
    ]

    const imgTabs = [
        {
            name: 'Tea',
            url: 'tea-cover',
            page: './pages/product.html'
        },
        {
            name: 'Landscapes',
            url: 'landscape-cover',
            page: ''
        },
        {
            name: 'Fog',
            url: 'fog-cover',
            page: ''
        },
        {
            name: 'Various',
            url: 'various-cover',
            page: ''
        },
        {
            name: 'Tools',
            url: 'tool-cover',
            page: ''
        },
        {
            name: 'Products',
            url: 'product-cover',
            page: ''
        }
    ]

div(
    class='w-1/4 m-auto mb-8' 
    id='portfolio-links'
    x-data='{count: 1}'
)
    ul.flex.w-full.justify-around
        each portfolioLink, index in portfolioLinks
            li(
                class='text-center' 
                key=index
            )
                a(
                    href='#' 
                    class='text-xs font-medium text-gray-900 hover:text-gray-500'
                    class='portfolioLinks'
                    :class="{ 'active': tab === 'foo' }"
                    @click=`count = ${index + 1}`
                )= portfolioLink.toUpperCase()
|
#portfolio.flex.w-full.flew-wrap
    each imgTab, index in imgTabs
        div(class='w-1/3 relative text-center overflow-hidden')
            a(href=imgTab.page) 
                img(
                    src=`./assets/img/covers/${imgTab.url}.jpg`
                    class=`animated fadeInUp delay-${index}`
                    class='portfolioImg'
                )
                p.absolute.text-gray-100.text-lg.text-semibold.opacity-0.pointer-events-none= imgTab.name
